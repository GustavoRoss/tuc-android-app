<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fabricadeprogramador.tuc.br.com.fabricadeprogramador.activity.CestaActivity">

    <TextView
        android:text="Produto / PreÃ§o / QTD."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ah_ppq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_toStartOf="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R$ "
        android:id="@+id/textView2"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:layout_toStartOf="@+id/tv_ValorTotal" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvCesta"

        android:layout_below="@+id/tv_ah_ppq"
        android:layout_above="@+id/btn_ac_clean"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ValorTotal"
        android:textSize="22sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btn_ac_clean"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
